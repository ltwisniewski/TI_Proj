@Model IEnumerable<TI_Projekt.Models.VideoModel>

    @{
        ViewBag.Title = "title";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <br />
    <h2>Formularz dodawania nowej wędrówki</h2>
    <br />
    <br />

    @using (Html.BeginForm("UploadPhoto", "Form", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <form>
                <div class="form-group row">
                    <label for="inputTitle" class="col-sm-3 col-form-label">Tytuł</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="inputTitle" placeholder="Wędrówka z fraszką">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputStartPlace" class="col-sm-3 col-form-label">Miejsce początkowe</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="inputStartPlace" placeholder="Dawny dom Jana Sztaudyngera przy ul.1 Maja 55">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputDestinationPlace" class="col-sm-3 col-form-label">Miejsce docelowe</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="inputDestinationPlace" placeholder="Okolice chaty Walońskiej przy ul. Kołątaja 12">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputDistance" class="col-sm-3 col-form-label">Przebyty dystans w km</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="inputDistance" placeholder="12">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputStartDate" class="col-sm-3 col-form-label">Data rozpoczęcia</label>
                    <div class="col-sm-6">
                        <input type="date" class="form-control" id="inputStartDate">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEndDate" class="col-sm-3 col-form-label">Data zakończenia</label>
                    <div class="col-sm-5">
                        <input type="date" class="form-control" id="inputEndDate">
                    </div>
                </div>
            </form>
        </div>
    }



    <div class="container py-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <button style="margin-left: 27px; margin-bottom:10px;" type="button" class="btn btn-danger rounded-0" data-toggle="modal" data-target="#UploadVideo">
                        Dodaj film
                    </button>
                    <div class="modal fade" id="UploadVideo">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Załaduj plik wideo</h4>
                                    <button type="button" class="close" data-dismiss="modal">×</button>
                                </div>
                                <div class="modal-body">
                                    @*@using (Ajax.BeginForm("UploadVideo", "Form", new AjaxOptions { HttpMethod = "POST" }))*@
                                    @using (Html.BeginForm("UploadVideo", "Form", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div class="form-group">
                                            <label>Wybierz plik:</label>
                                            <div class="input-group">
                                                <div class="custom-file">
                                                    <input type="file" id="fileupload" name="fileupload" class="custom-file-input" />
                                                    <label class="custom-file-label"></label>
                                                </div>
                                                <div class="input-group-append">
                                                    <input type="submit" id="btnUpload" class="btn btn-secondary" value="Upload" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Zamknij</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4 col-md-4 col-xs-12">
                            <div class="title">@item.VideoName</div>
                            <div class="video-frame">
                                <video style="width:100%; height:auto;" controls>
                                    <source src="@Url.Content(@item.VideoSrc)" type="video/mp4" />
                                </video>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
        document.querySelector('.custom-file-input').addEventListener('change', function (e) {
            var fileName = document.getElementById("fileupload").files[0].name;
            var nextSibling = e.target.nextElementSibling
            nextSibling.innerText = fileName
        })
    </script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>





    <div class="form-group row">
        <div class="col-sm-4">
            <button type="submit" class="btn btn-success">Dodaj</button>
        </div>
    </div>
</TI_Projekt.Models.VideoModel>
   
